set ifs "\n"
set icons false
set sixel true
set sortby ext
set mouse false
set scrolloff 10
set ratios 1:2:3
set drawbox true
set shellopts '-eu'
#set previewer '~/.config/lf/scope'
set previewer '~/.config/lf/preview'

map X delete
map <delete> delete
map D %trash -v $fx
map <a-e> $sudo $EDITOR $f # alt+e
map <c-z> $trash-restore

# dedicated keys for file opener actions
map o &mimeopen $f
map O $mimeopen --ask $f

map J half-down
map K half-up

cmd bulkrename ${{
	tmpfile_old="$(mktemp)"
		tmpfile_new="$(mktemp)"

		[ -n "$fs" ] && fs=$(basename -a $fs) || fs=$(ls)

		echo "$fs" > "$tmpfile_old"
			echo "$fs" > "$tmpfile_new"
			$EDITOR "$tmpfile_new"

			[ "$(wc -l < "$tmpfile_old")" -eq "$(wc -l < "$tmpfile_new")" ] || { rm -f "$tmpfile_old" "$tmpfile_new"; exit 1; }

	paste "$tmpfile_old" "$tmpfile_new" | while IFS="$(printf '\t')" read -r src dst
		do
			[ "$src" = "$dst" ] || [ -e "$dst" ] || mv -- "$src" "$dst"
				done

					rm -f "$tmpfile_old" "$tmpfile_new"
					lf -remote "send $id unselect"
}}

map r :rename		# before extension
map I :rename; cmd-home # at the very beginning
map A :rename; cmd-end 	# at the very end
map R push A<c-u> 	# new rename
map <a-r> bulkrename	# bulkrename
map <f-2> :rename; cmd-delete-home	# before extension & delete home

map <enter> shell
map <c-n> push $touch<space>		# intend to creat a new file and edit it
map <a-n> push $mkdir<space>-p<space>	# intend to creat a new folder
map p					# unbind p "paste"
map pp	paste
map pl	%ln -si $fx .
map pL	%ln -sir $fx .

map ==   push %chmod<space><space>$fx<c-b><c-b><c-b><c-b>
map =+x  %chmod +x $fx
map =-x  %chmod -x $fx
map =766 %chmod 766 $fx

map <f-4> &dolphin --select $fx .
map <s-f-4> &dolphin --select $fx .

map zz %echo "Z -- Capitalized used for compress"
map Zc $unzip -O CP936 $f -d ${f%.*} # only for Chinese Charset zips
map Zx &7z x -o${f%.*} $f
map Zz &7z a $f.zip $fx | grep archive	# zip: most common one
map ZZ &7z a -mx9 $f.7z $fx | grep archive	# best compression ratio

map xx &$f

cmap <tab> cmd-menu-complete
cmap <backtab> cmd-menu-complete-back

map c					# unbind c "clear"
map u	clear				# remap u from "unselect" to "clear"
map U	unselect
map cfg cd ~/.config
map clo cd ~/.local/share
map cac cd ~/.cache
map g/	cd /
map ge	cd ~/windows/E/Downloads
map <backspace2> %lf -remote "send $id cd "$OLDPWD""
