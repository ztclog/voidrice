# Config for imv
[options]
width = 600
height = 600
scaling_mode = shrink
overlay_font = Serif:10
suppress_default_binds = true

[aliases]
# Define aliases here. Any arguments passed to an alias are appended to the
# command.
# alias = command to run

[binds]
q = quit
y = exec [ ! -x /usr/bin/wl-copy ] && notify-send -a IMV "Wl-copy not installed" || wl-copy < $imv_current_file && notify-send -a IMV "Image copied to clipboard." # edit image
<Ctrl+c> = exec [ ! -x /usr/bin/wl-copy ] && notify-send -a IMV "Wl-copy not installed" || wl-copy < $imv_current_file && notify-send -a IMV "Image copied to clipboard." # edit image

# Image navigation
gg = goto 1
<Shift+G> = goto -1
<Tab> = next
<Left> = prev
<Right> = next
<grave> = prev
<Shift+K> = prev
<Shift+J> = next
<bracketleft> = prev
<bracketright> = next

# Panning
j = pan 0 -50
k = pan 0 50
h = pan 50 0
l = pan -50 0

# Zooming
<Shift+plus> = zoom actual
<equal> = zoom 1
<minus> = zoom -1
z = zoom actual

# Flipping
<Shift+bar> = flip horizontal
<Shift+underscore> = flip vertical

# Rotate Clockwise by 90 degrees
r = rotate by 90

# Other commands
c = center
f = fullscreen
i = overlay
x = close
p = exec notify-send -a IMV $imv_current_file
<Ctrl+r> = reset
e = exec [ ! -x /usr/bin/spectacle ] && notify-send -a IMV "Spectacle not installed" || spectacle -E "$imv_current_file" &>/dev/null & # edit image
<Shift+E> = exec [ ! -x /usr/bin/spectacle ] && notify-send -a IMV "Spectacle not installed" || spectacle -E "$imv_current_file" &>/dev/null & # edit image
<Ctrl+p> = exec notify-send -a IMV "IMG2PDF already executed!" && img2pdf -a -r ifvalid -S A4 -f into "$imv_current_file" | zathura - &>/dev/null & # img2pdf

# Gif playback
<period> = next_frame
<space> = toggle_playing
